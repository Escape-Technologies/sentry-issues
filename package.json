{
  "name": "sentry-issues",
  "displayName": "Sentry Issues",
  "description": "View sentry issues locally",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sentry-issues.refresh",
        "title": "Sentry: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "sentry-issues.filter",
        "title": "Sentry: Filter Projects",
        "icon": "$(search)"
      },
      {
        "command": "sentry-issues.reset",
        "title": "Sentry: Reset configuration",
        "icon": "$(key)"
      },
      {
        "command": "sentry-issues.showEvent",
        "title": "Sentry: Show Event Details"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sentryIssuesSidebar",
          "title": "Sentry Issues",
          "icon": "assets/sentry.png"
        }
      ]
    },
    "views": {
      "sentryIssuesSidebar": [
        {
          "type": "tree",
          "id": "sentryIssuesSidebar.sidebar",
          "name": "Sidebar View"
        },
        {
          "type": "webview",
          "id": "sentryIssuesSidebar.eventDetails",
          "name": "Event Details"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sentry-issues.filter",
          "when": "view == sentryIssuesSidebar.sidebar",
          "group": "navigation"
        },
        {
          "command": "sentry-issues.refresh",
          "when": "view == sentryIssuesSidebar.sidebar",
          "group": "navigation"
        },
        {
          "command": "sentry-issues.reset",
          "when": "view == sentryIssuesSidebar.sidebar",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Sentry Issues",
      "properties": {
        "sentry-issues.organization": {
          "type": "string",
          "default": "",
          "description": "Sentry Organization Slug"
        },
        "sentry-issues.url": {
          "type": "string",
          "default": "https://sentry.io",
          "description": "Sentry Instance URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "fmt": "prettier --write .",
    "test": "vscode-test",
    "build": "npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}